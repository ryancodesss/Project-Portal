@model IEnumerable<Project_Portal.Models.RegistrationModel>

@{
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

@{
    ViewData["Title"] = "ViewAccounts";
}

<h1>AccountDetails</h1>

<p>
    <a asp-action="AddStaff">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Full_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Affliation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User_Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Full_Name)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.Affliation)
            </td>
            <td>
                    @Html.DisplayFor(modelItem => item.User_Type)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditUser", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "DeleteUser", new {  id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
