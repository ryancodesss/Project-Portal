@model IEnumerable<Project_Portal.Models.AttendeeModel>

@{
    Layout = "~/Views/Shared/General_Layout.cshtml";
}

@{
    ViewData["Title"] = "Reviews";
}

<h1>Reviews</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.presentationName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviewScore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.reviewDesc)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.presentationName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.reviewScore)
                </td>
                <td>
                    <textArea rows="4" cols="30">@Html.DisplayFor(modelItem => item.reviewDesc)</textArea>
                </td>
            </tr>
        }
    </tbody>
</table>

