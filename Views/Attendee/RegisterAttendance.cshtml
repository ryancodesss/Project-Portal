@model Project_Portal.Models.AttendeeModel

@{
    ViewData["Title"] = "RegisterAttendance";
}

<h1>RegisterAttendance</h1>

<h4>Attendee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegisterAttendance">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="presentationID" class="control-label"></label>
                <input asp-for="presentationID" class="form-control" />
                <span asp-validation-for="presentationID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userID" class="control-label"></label>
                <input asp-for="userID" class="form-control" />
                <span asp-validation-for="userID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="text" id="attending" name="status" value="attending">
                <label>ATTENDING</label><br>
                <input type="text" id="miss" name="status" value="miss">
                <label>MISS</label><br>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ViewAllPresentations">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
